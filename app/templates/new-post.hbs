<!-- Posts Form -->
<div class="well">
    <h4>Add a New Post:</h4>
    <form role="form">
        <div class="form-group">
          <label for="img">Image</label>
          {{input id="img" class="form-control" value=img}}
        </div>
        <div class="form-group">
          <label for="title">Title</label>
          {{input id="title" class="form-control" value=title}}
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          {{input id="date" class="form-control" value=date}}
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          {{input id="author" class="form-control" value=author}}
        </div>
        <div class="form-group">
          <label for="bodyIntro">Body Intro</label>
          {{input id="bodyIntro" class="form-control" value=bodyIntro}}
        </div>
        <div class="form-group">
          <label for="bodyRest">Body Rest</label>
          {{textarea cols="80" rows="6" id="bodyRest" class="form-control" value=bodyRest}}
        </div>
        <button class="btn btn-default" {{action 'submit'}}>Submit</button>
    </form>
</div>

<hr>