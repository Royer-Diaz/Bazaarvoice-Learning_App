<!-- Comments Form -->
<div class="well">
    <h4><i class="fa fa-fw fa-comment"></i>Leave a Comment:</h4>
    <form role="form">
	    <div class="form-group">
		<label for="text">Text</label>
		{{input id="text" class="form-control" value=text}}
		</div>
		<div class="form-group">
		<label for="user">User</label>
		{{input id="user" class="form-control" value=user}}
		</div>
		<button class="btn btn-primary" {{action 'save'}}>Submit</button>
    </form>
</div>

